<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="500.0" minWidth="500.0" spacing="20.0" style="-fx-background-color: FFFFFF;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ipvc.springjbdc.controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane minHeight="500.0" minWidth="500.0" style="-fx-background-color: FFFFFF;">
        <children>
            <Button fx:id="btnLogin" layoutX="220.0" layoutY="374.0" onAction="#Login" style="-fx-background-color: #9F6B41; -fx-background-radius: 12px;" text="Login" textFill="#fcfcfc">
                <font>
                    <Font name="Roboto Light" size="16.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor></Button>
            <PasswordField fx:id="password" layoutX="151.0" layoutY="309.0" prefWidth="200.0" promptText="Password" style="-fx-border-color: #9F6B41; -fx-background-color: #FFF9EB;">
                <font>
                    <Font name="Roboto Light" size="12.0" />
                </font></PasswordField>
            <TextField fx:id="email" layoutX="151.0" layoutY="264.0" prefHeight="25.0" prefWidth="200.0" promptText="E-mail" style="-fx-background-color: #FFF9EB; -fx-border-color: #9F6B41;">
                <font>
                    <Font name="Roboto Light" size="12.0" />
                </font></TextField>
            <ImageView fitHeight="140.0" fitWidth="305.0" layoutX="98.0" layoutY="89.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@/img/logo-png.png" />
            </image></ImageView>
            <Label layoutX="30.0" layoutY="207.0" text="Software de gestão de uma empresa de produção de manteiga" textFill="#8a5c3a">
                <font>
                    <Font name="Roboto Light" size="16.0" />
                </font>
            </Label>
            <Label fx:id="lebel" layoutX="153.0" layoutY="434.0" prefHeight="32.0" prefWidth="197.0" textAlignment="CENTER" textFill="RED" />
        </children>
    </AnchorPane>
</VBox>
