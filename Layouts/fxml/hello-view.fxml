<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="500.0" minWidth="500.0" spacing="20.0" style="-fx-background-color: FFFFFF;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.layoutsprojetoii.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane minHeight="500.0" minWidth="500.0" style="-fx-background-color: FFFFFF;">
        <children>
            <Button layoutX="220.0" layoutY="374.0" onAction="#onHelloButtonClick" style="-fx-background-color: #9F6B41; -fx-background-radius: 12px;" text="Login" textFill="#fcfcfc">
                <font>
                    <Font name="Roboto Light" size="16.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor></Button>
            <TextField layoutX="151.0" layoutY="309.0" prefWidth="200.0" style="-fx-border-color: #9F6B41; -fx-background-color: #FFF9EB;" text="Password">
                <font>
                    <Font name="Roboto Light" size="12.0" />
                </font></TextField>
            <TextField layoutX="151.0" layoutY="264.0" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #FFF9EB; -fx-border-color: #9F6B41;" text="E-mail">
