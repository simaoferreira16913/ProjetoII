        <class>SpringWebMVC.ES2.DAL.Funcionario</class>
        <class>SpringWebMVC.ES2.DAL.Produtofinal</class>
        <class>SpringWebMVC.ES2.DAL.Vindima</class>
        <class>SpringWebMVC.ES2.DAL.Casta</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
            <property name="javax.persistence.jdbc.user" value="user10"/>
            <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="javax.persistence.jdbc.password" value="user10"/>
        </properties>
    </persistence-unit>
</persistence>
